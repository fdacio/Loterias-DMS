<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.daciosoftware.loteriasdms.configuracoes.ConfiguracoesActivity"
    tools:showIn="@layout/activity_configuracoes">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewLabelJogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="FuturaWeb,sans-serif"
                    android:text="@string/mega_sena"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorMegasena"
                    android:textStyle="bold|italic" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:text="@string/label_url_arquivo_resultados"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextUrlArquivoResultadoMegasena"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:inputType="text"
                    android:maxLines="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:text="@string/label_url_resultados"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextUrlResultadoMegasena"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:maxLines="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewLabelJogo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="FuturaWeb,sans-serif"
                    android:text="@string/lotofacil"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorLotofacil"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="15dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView81"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:text="@string/label_url_arquivo_resultados"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextUrlArquivoResultadoLotofacil"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:maxLines="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView91"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:text="@string/label_url_resultados"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextUrlResultadoLotofacil"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:maxLines="1" />
            </TableRow>


            <!--quina-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewLabelJogo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="FuturaWeb,sans-serif"
                    android:text="@string/quina"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorQuina"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="15dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView82"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:text="@string/label_url_arquivo_resultados"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextUrlArquivoResultadoQuina"
                    android:layout_column="0"
                    android:layout_span="3"
                    android:maxLines="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView92"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:text="@string/label_url_resultados"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editTextUrlResultadoQuina"
                    android:layout_column="0"
                    android:layout_span="2"
                    android:maxLines="1" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</RelativeLayout>
